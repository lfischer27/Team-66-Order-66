<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.BuyActivity">
    <View
            android:id="@+id/background_market"
            android:layout_width="800dp"
            android:layout_height="800dp"
            android:background="@drawable/rectangle"/>

    <TextView
            android:id="@+id/resource_header"
            android:text="Resource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="150dp"
            android:textStyle="bold"
            android:textSize="19sp"/>

    <TextView
            android:id="@+id/resource_price_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="130dp"
    />

    <TextView
            android:id="@+id/resource_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="200dp"
    />

    <TextView
            android:id="@+id/buy_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="100dp"
    />
    <LinearLayout
            android:id="@+id/buy_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="60dp"
            android:orientation="horizontal">
        <Button
                android:id="@+id/decrease_buy_quantity"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="decreaseQuantity"
                android:text="-"/>
        <TextView
                android:id="@+id/buy_quantity_text"
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textSize="18sp"/>
        <Button
                android:id="@+id/increase_buy_quantity"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="increaseQuantity"
                android:text="+"/>
    </LinearLayout>

    <TextView
            android:id="@+id/sell_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sell"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="360dp"
            android:layout_marginLeft="100dp"
    />
    <LinearLayout
            android:id="@+id/sell_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            android:layout_marginLeft="60dp"
            android:orientation="horizontal">
        <Button
                android:id="@+id/decrease_sell_quantity"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="decreaseQuantity"
                android:text="-"/>
        <TextView
                android:id="@+id/sell_quantity_text"
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textSize="18sp"/>
        <Button
                android:id="@+id/increase_sell_quantity"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="increaseSellQuantity"
                android:text="+"/>
    </LinearLayout>
</RelativeLayout>