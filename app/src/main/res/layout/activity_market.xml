<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.MarketActivity">

    <!-- Market header-->
    <TextView
            android:id="@+id/market_header"
            android:text="Welcome to the Market"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="86dp"
            android:textSize="23sp"
            android:textStyle="bold"
            android:background="#85CEEE"
    />
    <!-- Resources selector header -->
    <TextView
            android:id="@+id/market_subheader"
            android:text="Purchase resources here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:layout_marginLeft="97dp"
            android:textSize="19sp"
            android:background="#85CEEE"

    />

    <!-- Resources selector header -->
    <TextView
            android:id="@+id/resources_header"
            android:text="Available resources"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="30dp"
            android:textSize="19sp"
            android:textStyle="bold"
    />

    <!-- Spinner that displays all resources available for purchase -->
    <Spinner
            android:id="@+id/resources_spinner"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="185dp"
    />

    <TextView
            android:id="@+id/price_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="275dp"
            android:layout_marginLeft="30dp"
    />

    <TextView
            android:id="@+id/price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="275dp"
            android:layout_marginLeft="100dp"
    />

    <TextView
            android:id="@+id/market_stock_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Market Stock:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="335dp"
            android:layout_marginLeft="30dp"
    />

    <TextView
            android:id="@+id/market_stock_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="335dp"
            android:layout_marginLeft="160dp"
    />

    <TextView
            android:id="@+id/ship_stock_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Market Stock:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="400dp"
            android:layout_marginLeft="30dp"
    />

    <TextView
            android:id="@+id/ship_stock_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="400dp"
            android:layout_marginLeft="160dp"
    />

    <!-- Resource selector -->
    <TextView
            android:id="@+id/quantity_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity to Purchase"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginTop="470dp"
            android:layout_marginLeft="110dp"/>
    <LinearLayout
            android:id="@+id/quantity_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="510dp"
            android:layout_marginLeft="140dp"
            android:orientation="horizontal">
        <Button
                android:id="@+id/decrease_quantity"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="decreaseQuantity"
                android:text="-"/>
        <TextView
                android:id="@+id/remaining_quantity_text"
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textSize="18sp"/>
        <Button
                android:id="@+id/increase_quantity"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="increaseQuantity"
                android:text="+"/>
    </LinearLayout>

    <Button
            android:text="Buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buy_button"
            android:layout_marginTop="620dp"
            android:layout_marginRight="40dp"
            android:layout_alignParentRight="true"
            android:onClick="onAddPressed"
    />
</RelativeLayout>

